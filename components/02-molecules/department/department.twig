{% set department__base_class = 'department' %}


<div {{ bem(department__base_class) }}>
    {% embed "@atoms/links/link/link.twig" with
        {
            link_url: "/",
            link_modifiers: ['no-dec'],
        }
    %}
        {% block link_content %}
            {% include "@atoms/text/headings/_heading.twig" with
                {
                    heading_level: '2',
                    heading: site_slogan,
                    heading_base_class: 'slogan',
                    heading_blockname: department__base_class,
                }
            %}
            {% include "@atoms/text/headings/_heading.twig" with
                {
                    heading_level: '2',
                    heading_base_class: 'name',
                    heading: site_name,
                    heading_blockname: department__base_class,
                }
            %}
        {% endblock %}
    {% endembed %}
</div>